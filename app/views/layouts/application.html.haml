%html{"ng-app" => "OdeskLogin"}
  %head
    %title OdeskLogin
    %script{:src => "//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular-resource.min.js"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'bootstrap'
    = javascript_include_tag 'bootstrap'
    = csrf_meta_tags
  %body
    #user-widget
      .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} HAYDEN
          %center
            .navbar-collapse.collapse.col-sm-6.navbar-form
              %input#kwd_search.form-control{:placeholder => "Search", :type => "text", :value => ""}/
          .navbar-collapse.collapse
            %form.navbar-form.navbar-right{:role => "form"}
              - if current_user
                Welcome
                = succeed "!" do
                  %strong= current_user.name
                = link_to "Sign out", signout_path, id: "sign_out", :class=>"btn btn-success"
              - else
                = link_to "OdeskLogin", "/auth/odesk", id: "sign_in", :class=>"btn btn-success"
          / /.navbar-collapse
      / Main jumbotron for a primary marketing message or call to action
      .jumbotron
        .container
          .navbar.navbar-static-top
            - if current_user
              #loading
                %b Loading...
      .container
        - if current_user
          %div{"ng-view" => "ng-view"}
        / Example row of columns
        .row
          = yield
        %hr
          %footer
            %p &copy; Company 2014
      / /container
 